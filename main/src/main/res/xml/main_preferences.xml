<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.PreferenceCategory
        android:title="Quick Message">

        <androidx.preference.Preference
            android:key="pick_contact_preference_key"
            android:title="Send to" />

        <androidx.preference.EditTextPreference
            android:defaultValue="Hello from Quick Message!"
            android:key="message_key"
            android:selectAllOnFocus="true"
            android:title="Message to send" />

        <androidx.preference.CheckBoxPreference
            android:defaultValue="true"
            android:key="require_confirmation_key"
            android:title="Require Confirmation" />

        <androidx.preference.Preference
            android:key="send_message_key"
            android:title="Send Message" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        android:title="About">

        <androidx.preference.Preference
            android:key="source_code_key"
            android:title="View Source Code"
            android:summary="https://github.com/boswelja/QuickMessage" />

        <androidx.preference.Preference
            android:key="app_version_key"
            android:title="App Version" />
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>